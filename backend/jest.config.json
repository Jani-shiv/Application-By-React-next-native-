{
  "testEnvironment": "node",
  "testMatch": [
    "**/tests/**/*.test.js",
    "**/__tests__/**/*.js",
    "**/?(*.)+(spec|test).js"
  ],
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/server.js",
    "!src/config/database.js"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": ["text", "lcov", "html"],
  "setupFilesAfterEnv": ["<rootDir>/src/tests/setup.js"],
  "testTimeout": 10000,
  "verbose": true
}
